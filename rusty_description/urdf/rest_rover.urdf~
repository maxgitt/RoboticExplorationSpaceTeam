//Universal Robot Description File
//Rusty the Rover
//Made By: REST (Robotic Exploration of Space Team)
//A member of the S3Fl Lab

<robot name="rest_rover">
	
	//Base_Link - Top of Tree
	<link name="base_link">
		<inertial>
			<origin
				xyz="0 0 0" 
				//This is the pose of the inertial reference
				//frame, relative to the link reference frame.
				//The origin of the inertial reference frame
				//needs to be at the center of gravity. The axes
				//of the inertial reference frame do not need to
				//be aligned with the principal axes of the
				//inertia. 
				rpy="0 0 0"/>
		</inertial>
		<visual>
			<origin
				xyz="0 0 0" 
				rpy="0 0 0"/>
		</visual>
	</link>
	
	//Link for Front Right Wheel
	<link name="FR_Wheel_Link">
		<inertial>
			<origin xyz=".3683 .2667 -.0762" 
			rpy="0 0 0"/>
		</inertial>
		<visual>
			<origin
				xyz="0 0 0" 
				rpy="0 0 0"/>
		</visual>
	</link>
	
	//Fixed joint between front right wheel and base link.
	<joint 
		name="FR_Wheel_Joint"
		type="fixed">
		<origin
			xyz=".3683 .2667 -.0762"  />
			//Offset from the link to the joint
		<parent 
			link="base_link" />
		<child
			link="FR_Wheel_Link" />
		<axis
			xyz="-1 0 0"/>
	</joint>
	
	//Link for Front Left Wheel
	<link name ="FL_Wheel_Link">
		<inertial>
		<origin xyz="-.3683 .2667 -.0762"  
			rpy= "0 0 0"/>
		</inertial>
		<visual>
			<origin
				xyz="0 0 0" 
				rpy="0 0 0"/>
		</visual>
	</link>
	
	//Fixed joint between front left wheel and base link.
	<joint 
		name="FL_Wheel_Joint"
		type="fixed">
		<origin
			xyz = "-.3683 .2667 -.0762" />
			//Offset from the link to the joint
		<parent 
			link="base_link" />
		<child
			link="FL_Wheel_Link" />
		<axis
			xyz="1 0 0"/>
	</joint>
	
	//Link for Right Rear Wheel
	<link name ="RR_Wheel_Link">
		<inertial>
			<origin xyz=".3683 -.2667 -.0762" 
			rpy="0 0 0"/>
		</inertial>
		<visual>
			<origin
				xyz="0 0 0" 
				rpy="0 0 0"/>
		</visual>
	</link>
	
	//Fixed joint between rear right wheel and base link.	
	<joint 
		name="RR_Wheel_Joint"
		type="fixed">
		<origin
			xyz=".3683 -.2667 -.0762" />
			//Offset from the link to the joint
		<parent 
			link="base_link" />
		<child
			link="RR_Wheel_Link" />
		<axis
			xyz="-1 0 0"/>
	</joint>
	
	//Link for rear left wheel.
	<link name="RL_Wheel_Link">
		<inertial>
			<origin xyz="-.3683 -.2667 -.0762" 
			rpy="0 0 0"/>
		</inertial>
		<visual>
			<origin
				xyz="0 0 0" 
				rpy="0 0 0"/>
		</visual>
	</link>
	
	//Joint between base link and rear left wheel link.
	<joint 
		name="RL_Wheel_Joint"
		type="fixed">
		<origin
			xyz="-.3683 -.2667 -.0762" />
			//Offset from the link to the joint
		<parent 
			link="base_link" />
		<child
			link="RL_Wheel_Link" />
		<axis
			xyz="1 0 0"/>
	</joint>
</robot>
	
